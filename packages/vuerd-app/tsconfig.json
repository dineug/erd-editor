{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "sourceMap": true,
    "baseUrl": ".",
    "useDefineForClassFields": true,
    "allowJs": true,
    "paths": {
      "@/*": ["src/*"],
      "@@types/*": ["src/@types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": ["node_modules"]
}
